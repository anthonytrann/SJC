  <!-- Custom styles for this template -->
  <link rel="shortcut icon" href=http://www.freshdesignweb.com/wp-content/themes/fv24/images/icon.ico />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

  <style>
    .material-icons {
      vertical-align: -14%
    }
  </style>
</head>

<body class="text-center" data-gr-c-s-loaded="true">

  <%- include navbar.ejs %>

  <h1>Regional Permanent Address</h1>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="northern-tab" data-toggle="tab" href="#northern" role="tab"
        aria-controls="northern" aria-selected="true">Northern</a>
      <a class="nav-item nav-link" id="central-tab" data-toggle="tab" href="#central" role="tab" aria-controls="central"
        aria-selected="false">Central</a>
      <a class="nav-item nav-link" id="southern-tab" data-toggle="tab" href="#southern" role="tab"
        aria-controls="southern" aria-selected="false">Southern</a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="northern" role="tabpanel" aria-labelledby="northern-tab">
      <div class="container col-md-10 .offset-md-3" style="overflow-x:auto;">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Patron Saint</th>
              <th scope="col">Surname + Middlename</th>
              <th scope="col">Firstname</th>
              <th scope="col">Email</th>
              <th scope="col">Phone Number</th>
              <th scope="col">Permanent Address</th>
            </tr>
          </thead>
          <tbody>
            <% let count = 0;
            for (let i=0; i<candidateRecords.length; i++) {
              if (candidateRecords[i].permanentAddress.region == "Northern") {
                count++;
                let candidate = candidateRecords[i]; %>
            <tr>
              <th scope="row"><%= count %></th>
              <td><%= candidate.patronSaint %></td>
              <td><%= candidate.surnameMiddlename %></td>
              <td><%= candidate.firstname %></td>
              <td><%= candidate.email %></td>
              <td><%= candidate.phoneNumber %></td>
              <% let address = candidate.permanentAddress.houseNumber1 + " " + candidate.permanentAddress.street1 + ", " + candidate.permanentAddress.ward1 + ", " + candidate.permanentAddress.district1 + ", " + candidate.permanentAddress.city1; %>
              <td><%= address %></td>
              <td>
                <button class="update" id=<%= candidate._id + "Edit" %>><i class="material-icons">edit</i></button>
                <button class="delete" id=<%= candidate._id + "Delete" %>><i class="material-icons">delete</i></button>
              </td>
            </tr>
            <% }
            } %>
          </tbody>
        </table>
      </div>
    </div>
